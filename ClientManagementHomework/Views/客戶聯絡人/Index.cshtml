@model IEnumerable<ClientManagementHomework.Models.客戶聯絡人>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("新增客戶資料", "Create", null, new { @class = "btn btn-primary" })
</p>

@using (Html.BeginForm("Index", "客戶聯絡人"))
{
    <div class="form-group">
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    @Html.DisplayNameFor(model => model.職稱)
                    @Html.TextBox("職稱", null, new { @class = "form-control" })
                </div>
                <div class="col-md-3">
                    @Html.DisplayNameFor(model => model.姓名)
                    @Html.TextBox("姓名", null, new { @class = "form-control" })
                </div>
                <div class="col-md-3">
                    @Html.DisplayNameFor(model => model.Email)
                    @Html.TextBox("Email", null, new { @class = "form-control" })
                </div>
                <div class="col-md-3"></div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    @Html.DisplayNameFor(model => model.手機)
                    @Html.TextBox("手機", null, new { @class = "form-control" })
                </div>
                <div class="col-md-3">
                    @Html.DisplayNameFor(model => model.Email)
                    @Html.TextBox("Email", null, new { @class = "form-control" })
                </div>
                <div class="col-md-3">
                    @Html.DisplayNameFor(model => model.電話)
                    @Html.TextBox("電話", null, new { @class = "form-control" })
                </div>
                <div class="col-md-3">
                    <input type="submit" value="Search" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </div>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.職稱)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.姓名)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.手機)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.電話)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.客戶資料.客戶名稱)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.職稱)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.姓名)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.手機)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.電話)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.客戶資料.客戶名稱)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
