@model IEnumerable<ClientManagementHomework.Models.客戶資料>
@{
    ViewBag.Title = "首頁";
}

<h2>客戶資料首頁</h2>

<p>
    @*
        http://blog.miniasp.com/post/2012/09/30/ASPNET-MVC-common-pitfall-for-html-actionlink-helper-method.aspx
    *@
    @Html.ActionLink("新增客戶資料", "Create", null, new { @class = "btn btn-primary" })
</p>
@using (Html.BeginForm("Index", "客戶資料"))
{
    <div class="form-group">
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    @Html.DisplayNameFor(model => model.客戶名稱)
                    @Html.TextBox("客戶名稱", null, new { @class = "form-control" })
                </div>
                <div class="col-md-3">
                    @Html.DisplayNameFor(model => model.統一編號)
                    @Html.TextBox("統一編號", null, new { @class = "form-control" })
                </div>
                <div class="col-md-3">
                    @Html.DisplayNameFor(model => model.電話)
                    @Html.TextBox("電話", null, new { @class = "form-control" })
                </div>
                <div class="col-md-3"></div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    @Html.DisplayNameFor(model => model.地址)
                    @Html.TextBox("地址", null, new { @class = "form-control" })
                </div>
                <div class="col-md-3">
                    @Html.DisplayNameFor(model => model.Email)
                    @Html.TextBox("Email", null, new { @class = "form-control" })
                </div>
                <div class="col-md-3">
                    @Html.DisplayNameFor(model => model.傳真)
                    @Html.TextBox("傳真", null, new { @class = "form-control" })
                </div>
                <div class="col-md-3">
                    <input type="submit" value="Search" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </div>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.客戶名稱)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.統一編號)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.電話)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.傳真)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.地址)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.客戶名稱)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.統一編號)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.電話)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.傳真)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.地址)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.ActionLink("編輯", "Edit", new { id = item.Id }) |
                @Html.ActionLink("資料明細", "Details", new { id = item.Id }) |
                @Html.ActionLink("刪除", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
</table>